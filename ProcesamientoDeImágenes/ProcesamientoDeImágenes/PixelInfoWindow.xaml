<Window x:Class="ProcesamientoDeImágenes.PixelInfoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProcesamientoDeImágenes"
        mc:Ignorable="d"
        Title="Pixel LAB Information" Height="615" Width="800"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize"
        Background="#353459">

    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Arial Narrow"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
    </Window.Resources>

    <Grid Margin="15">
        <StackPanel>
            <TextBlock x:Name="CoordinatesTextBlock" FontSize="14" Margin="0,0,0,10"/>
            <TextBlock x:Name="LTextBlock" FontSize="14" Margin="0,0,0,5"/>
            <TextBlock x:Name="ATextBlock" FontSize="14" Margin="0,0,0,5"/>
            <TextBlock x:Name="BTextBlock" FontSize="14" Margin="0,0,0,10"/>

            <Canvas x:Name="LabCanvas"
        Width="400" Height="400"
        Margin="0,10,0,0"
        HorizontalAlignment="Center"
        Background="White"
/>

        </StackPanel>
    </Grid>

</Window>