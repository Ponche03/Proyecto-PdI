<Window x:Class="ProcesamientoDeImágenes.Video"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProcesamientoDeImágenes"
        mc:Ignorable="d"
        Title="Picture Lab" Height="768" Width="1366"
        Background="#353459">

    <Window.Resources>

        <Style TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Arial Narrow"/>
        </Style>
        <Style TargetType="Button">
            <Setter Property="FontFamily" Value="Arial Narrow"/>
        </Style>

        <Style x:Key="SidebarButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontFamily" Value="Arial Narrow"/>

            <Setter Property="Template">

                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Left" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>

            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#211259"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#264CBF"/>
                </Trigger>
            </Style.Triggers>

        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" CornerRadius="20" Background="#0F0F26" Margin="10" MinWidth="200">
            <Grid>

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <!-- Row for title -->
                    <RowDefinition Height="Auto"/>
                    <!-- Row for legend -->
                    <RowDefinition Height="*"/>
                    <!-- Main options -->
                    <RowDefinition Height="Auto"/>
                    <!-- Bottom buttons -->
                </Grid.RowDefinitions>

                <!-- Software Title with SVG -->
                <StackPanel Grid.Row="0" HorizontalAlignment="Center" Margin="30">
                    <Image Source="/Assets/LogoColorInverse.png" Width="50" Height="50"/>
                    <TextBlock Text="Picture Lab" 
                FontSize="22" 
                FontWeight="Bold" 
                Foreground="White" 
                FontFamily="Cambria" 
                HorizontalAlignment="Center"/>
                </StackPanel>

                <!-- Legend -->
                <TextBlock Text="SELECT AN OPTION:" 
                   FontSize="14" 
                   FontWeight="Bold" 
                   Foreground="LightGray" 
                   HorizontalAlignment="Center" 
                   Margin="0 20 0 0"
                   Grid.Row="1"/>

                <StackPanel VerticalAlignment="Stretch" Margin="10" Grid.Row="2">

                    <Button Style="{StaticResource SidebarButtonStyle}" Click="GoToImageWindow">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock FontSize="20" Foreground="White">📷</TextBlock>
                            <TextBlock Text=" Image" FontSize="16" Foreground="White" Margin="10,0,0,0"/>
                        </StackPanel>
                    </Button>

                    <Button Style="{StaticResource SidebarButtonStyle}" Click="GoToVideoPage">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock FontSize="20" Foreground="White">🎥</TextBlock>
                            <TextBlock Text=" Video" FontSize="16" Foreground="White" Margin="10,0,0,0"/>
                        </StackPanel>
                    </Button>

                    <Button Style="{StaticResource SidebarButtonStyle}" Click="GoToCameraPage">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock FontSize="20" Foreground="White">📸</TextBlock>
                            <TextBlock Text=" Camera" FontSize="16" Foreground="White" Margin="10,0,0,0"/>
                        </StackPanel>
                    </Button>
                </StackPanel>

                <!-- Bottom section with buttons -->
                <StackPanel VerticalAlignment="Bottom" Margin="10,10,10,10" Grid.Row="3">
                    <Button Style="{StaticResource SidebarButtonStyle}" Click="SoftwareInfoClick">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock FontSize="20" Foreground="White">ℹ️</TextBlock>
                            <TextBlock Text=" Software Info" FontSize="16" Foreground="White" Margin="10,0,0,0"/>
                        </StackPanel>
                    </Button>

                    <Button Style="{StaticResource SidebarButtonStyle}" Click="UserManualClick">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock FontSize="20" Foreground="White">📖</TextBlock>
                            <TextBlock Text=" User Manual" FontSize="16" Foreground="White" Margin="10,0,0,0"/>
                        </StackPanel>
                    </Button>

                    <Button Style="{StaticResource SidebarButtonStyle}" Click="CloseApp">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock FontSize="20" Foreground="White">❌</TextBlock>
                            <TextBlock Text=" Close" FontSize="16" Foreground="White" Margin="10,0,0,0"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition  />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />

            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <!-- Selected Video Container -->
            <Border Grid.Column="2" Grid.ColumnSpan="27" Grid.RowSpan="17" Grid.Row="3" BorderBrush="Black" BorderThickness="2">
                <Image Stretch="Fill"/>
            </Border>

            <!-- Upload Video Icon -->
            <Button Click="OnUploadVideoIconClick" Grid.Column="3" Grid.Row="21" Background="Transparent" BorderThickness="0">
                <Image Source="/Assets/Icons/UploadImageIcon.png" Stretch="Fill"/>
            </Button>

            <!-- Download Video Icon -->
            <Button Click="OnDownloadVideoIconClick" Grid.Column="27" Grid.Row="21" Background="Transparent" BorderThickness="0">
                <Image Source="/Assets/Icons/DownloadImageIcon.png" Stretch="Fill"/>
            </Button>


            <ComboBox x:Name="comboBox" Grid.Column="15"  Grid.Row="21" Grid.RowSpan="2" HorizontalAlignment="Center" Margin="0,15,0,30" SelectedIndex="0" FontFamily="Arial Narrow">
                <ComboBoxItem>None</ComboBoxItem>
                <ComboBoxItem>Gaussian Blur</ComboBoxItem>
                <ComboBoxItem>Contrast Filter</ComboBoxItem>
                <ComboBoxItem>Sharpness Filter</ComboBoxItem>
                <ComboBoxItem>Threshold Filter</ComboBoxItem>
                <ComboBoxItem>Hue/Saturation Filter</ComboBoxItem>
                <ComboBoxItem>Negative Filter</ComboBoxItem>
                <ComboBoxItem>Vignette Filter</ComboBoxItem>
                <ComboBoxItem>Mosaic Filter</ComboBoxItem>
                <ComboBoxItem>Retro Effect</ComboBoxItem>
                <ComboBoxItem>Warp Filter</ComboBoxItem>
            </ComboBox>

            <!-- Histogram Red -->
            <Border Grid.Column="31" Grid.ColumnSpan="6" Grid.RowSpan="6" Grid.Row="2" 
        BorderBrush="Beige" BorderThickness="2">
                <Canvas Background="Transparent"/>
            </Border>

            <!-- Histogram Green -->
            <Border Grid.Column="31" Grid.ColumnSpan="6" Grid.RowSpan="6" Grid.Row="9" 
        BorderBrush="Beige" BorderThickness="2">
                <Canvas Background="Transparent"/>
            </Border>

            <!-- Histogram Blue -->
            <Border Grid.Column="31" Grid.ColumnSpan="6" Grid.RowSpan="6" Grid.Row="16" 
        BorderBrush="Beige" BorderThickness="2">
                <Canvas Background="Transparent"/>
            </Border>


        </Grid>

    </Grid>
</Window>
